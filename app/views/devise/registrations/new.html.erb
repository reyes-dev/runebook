<div class="signup-page">
  <div class="signup-title">
      <h1>Runebook</h1>
      <h3>Share your Saga in Social Media Valhalla.</h3>
  </div>

  <div class="signup-form">
      <h1>Sign up</h1>
      <h2>Already signed up? <%= link_to "Log in", new_session_path(resource_name) %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username, placeholder: "Username", required: "required" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", required: "required" %>      
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", required: "required" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", required: "required" %>
      </div>

      <div class="signup-button">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>
</div>